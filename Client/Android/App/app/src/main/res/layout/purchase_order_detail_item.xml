<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/po_detail_item"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:text="ProductName: "
            android:textSize="19dp"
            android:textFontWeight="1000"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/label_stocked"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/productName"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="Stocked:"
            android:textFontWeight="1000"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/stocked"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/productName"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:text="10/20"
            android:layout_toEndOf="@id/label_stocked"
            android:textFontWeight="1000"
            android:textSize="14dp" />



        <ImageButton
            android:id="@+id/btn_barcode"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/roundcornergrey"
            android:src="@drawable/ic_barcode" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>